<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <com.evan.chat.friends.ScrollChildSwipeRefreshLayout
            android:id="@+id/refresh_layout"
            android:layout_above="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:id="@+id/chatsLL"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ExpandableListView
                    android:id="@+id/chats_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/list_item_divider_left_15_right_15"
                    android:dividerHeight="1px"
                    android:childDivider="@drawable/list_item_divider_left_15_right_15"/>
        </LinearLayout>
    </com.evan.chat.friends.ScrollChildSwipeRefreshLayout>
    <LinearLayout
            android:layout_alignParentBottom="true"
            android:id="@+id/bottom"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="48dp">
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="3">
            <RelativeLayout
                    android:layout_marginLeft="8dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/rounded_chat"
                    android:layout_width="match_parent"
                    android:layout_height="32dp">
                <EditText
                        android:id="@+id/chat"
                        android:background="@null"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="text"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">
            <Button
                    android:id="@+id/send"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:textSize="16sp"
                    android:background="@drawable/rounded_corners"
                    android:text="发送"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>